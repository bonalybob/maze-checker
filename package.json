{
    "name": "wod-maze",
    "description": "Checks a Simple Maze Orienteering Course has been Completed Correctly",
    "author": {
        "name": "bonalybob"
    },
    "license": "MIT",
    "keywords": [
        "orienteering",
        "sportident",
        "timing",
        "maze",
        "course-checker",
        "world-orienteering-day",
        "wod",
        "electron"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/bonalybob/wod-maze.git"
    },
    "build": {
        "appId": "wod-maze",
        "productName": "WOD Maze Checker",
        "copyright": "Copyright Â© 2018 Bonalybob",
        "win": {
            "target": "nsis",
            "icon": "./assets/WOD Color.ico"
        }
    },
    "version": "1.2.1",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "rebuild": "electron-builder install-app-deps",
        "postinstall": "npm run rebuild",
        "dist": "build",
        "build": "npm run styles && npm run dist",
        "lint": "eslint ./scripts/**",
        "styles": "stylus ./styles/index.styl -o ./styles/styles.css -m -c",
        "watch:styles": "stylus ./styles/index.styl -o ./styles/styles.css -m -c -w"
    },
    "dependencies": {
        "npm": "^6.4.1",
        "serialport": "^7.0.2",
        "vue": "^2.5.17"
    },
    "devDependencies": {
        "electron": "^3.0.4",
        "electron-builder": "^20.28.4",
        "eslint": "^5.7.0",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-node": "^7.0.1",
        "eslint-plugin-promise": "^4.0.1"
    }
}
