#titlebar
    width: 100%
    height: 35px
    background: linear-gradient(37deg, #009248, #46b348)
    color: white
    user-select: none
    -webkit-user-select: none
    -webkit-app-region: drag

    img
        float: left
        margin: 7px 10px
        height: 20px

    p
        float: left
        margin: 0
        padding-left: 10px
        height: 35px
        font-weight: 300
        font-family: Roboto
        line-height: 35px

    button
        float: right
        padding: 0
        width: 50px
        height: 100%
        outline: 0
        border: 0
        background: none
        transition: 0.2s
        fill: white
        -webkit-app-region: no-drag

        &:hover
            background-color: #009248

    #close
        &:hover
            background-color: #E53935

@media (max-width: 350px)
    #titlebar
        #maximize, #minimize
            display: none
