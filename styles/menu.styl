#menu
    transition:.5s width
    float:left
    width:160px
    min-height:calc(100% - 35px)
    box-shadow(2)
    -webkit-user-select: none;
    user-select: none;
    button
        width:100%
        outline:0
        border:0
        margin:0
        padding: 7px 5px
        color: #009248
        background-color:white
        font-family:Roboto
        font-weight:300
        font-size:17px
        transition:.3s
        -webkit-user-select: none;
        user-select: none;
        &:hover
            color:white
            background-color:#009248
        &:first-child
            margin-top:5px

    button
        margin-top:10px
    .dropdown-menu
        font-family:Roboto
        font-weight:300
        h4
            font-weight:300
            margin:0
            margin-top:10px
            margin-bottom:5px
            font-size:14px
            color:#009248
            text-align:center
            &:first-child
                margin-top:5px
                margin-bottom:5px
        button
            margin-top:0px
            height:34px
            p
                margin:0
            &:hover
                & svg
                    fill:white
            svg
                height:20px
                margin:-20px 5px 0px 0px
                transition:.3s
                fill:#009248
                float:right

        ul
            padding:0
            margin:0
            width:100%
            text-align:center
            color:#009248
            font-size:16px
            list-style:none
        li
            transition:.3s
            padding:7px 5px
            &:hover
                color:white
                background-color:#009248
        .hidden
            li
                height:0
                padding:0
                font-size:0
